<div class="container" style="margin-top:90px;">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card-panel z-depth-5">
        <h4 class="center"> Sign Up</h4>
        <%= form_for(resource, class: "col s12 m12", as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <%= f.text_field :first_name, class: "validate" %>
                <%= f.label :first_name %><br/>
              </div>
              <div class="input-field col s6">
                <%= f.text_field :last_name, class: "validate" %>
                <%= f.label :last_name %><br/>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="fa fa-birthday-cake prefix"></i>
                <%= f.text_field :birthday, class: "datepicker" %>
                <%= f.label :birthday %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m12">
                <i class="material-icons prefix">perm_identity</i>
                <%= f.text_field :username, class: "validate" %>
                <%= f.label :username %><br/>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, class: "validate" %>
                <%= f.label :email %><br/>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password, class: "validate", autocomplete: "off" %>
                <%= f.label :password %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password_confirmation, class: "validate", autocomplete: "off" %>
                <%= f.label :password_confirmation %><br/>
              </div>
            </div>
            <%= f.submit "SIGN UP", class: "btn waves-effect waves-light" %>
        <% end %>
        <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name) %><br/>
        <% end -%>
      </div>
    </div>
  </div>
</div>