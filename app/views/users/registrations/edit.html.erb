<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card-panel z-depth-5">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
        <%= form_for(resource, class: "col s12 m12", as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <%= f.text_field :first_name, class: "validate" %>
                <%= f.label :first_name %><br/>
              </div>
              <div class="input-field col s6">
                <%= f.text_field :last_name, class: "validate" %>
                <%= f.label :last_name %><br/>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="fa fa-birthday-cake prefix"></i>
                <%= f.text_field :birthday, class: "datepicker" %>
                <%= f.label :birthday %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m12">
                <i class="material-icons prefix">perm_identity</i>
                <%= f.text_field :username, class: "validate" %>
                <%= f.label :username %><br/>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m12">
                <i class="material-icons prefix">email</i>
                <%= f.email_field :email, class: "validate" %>
                <%= f.label :email %><br/>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password, placeholder: "leave blank if you don't want to change your password", class: "validate", autocomplete: "off" %>
                <%= f.label :password %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password_confirmation, class: "validate", autocomplete: "off" %>
                <%= f.label :password_confirmation %><br/>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :current_password, placeholder: "needed to update your account", class: "validate", autocomplete: "off" %>
                <%= f.label :current_password %><br/>
              </div>
            </div>
            <%= f.submit "Update", class: "btn waves-effect waves-light" %>
        <% end %>

        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "waves-effect waves-light btn", data: {confirm: "Are you sure?"}, method: :delete %></p>
      </div>
    </div>
  </div>
</div>