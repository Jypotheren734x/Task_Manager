<% devise_error_messages!.each do |message| %>
    <%= javascript_tag "Materialize.toast('#{message}', 4000)" %>
<% end %>
<div class="container" style="margin-top:90px;">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card-panel z-depth-5">
        <h4 class="center"> Sign In</h4>
        <div class="row">
          <%= form_for(resource, class: "col s12 m12", as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row">
                <div class="input-field col s12 m12">
                  <i class="material-icons prefix">email</i>
                  <%= f.email_field :email, class: "validate" %>
                  <%= f.label :email %><br/>
                </div>
                <div class="input-field col s12 m12">
                  <i class="fa fa-unlock-alt prefix"></i>
                  <%= f.password_field :password, class: "validate", autocomplete: "off" %>
                  <%= f.label :password %>
                </div>
                <div class="input-field col s12">
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/>
                  <% end -%>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              </div>
              <%= f.submit "Log in", class: "btn waves-effect waves-light" %>
          <% end %>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name) %><br/>
          <% end -%>
        </div><!--card-->
      </div><!--col-->
    </div><!--row-->
  </div>
</div>