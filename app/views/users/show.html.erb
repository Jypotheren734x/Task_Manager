<div class="row">
  <div class="col s12, m3">
    <div class="card">
      <div class="card-content">
        <div class="card-title"><%= @user.full_name %></div>
        <div class="card-block">
          <ul>
            <li><i class="material-icons prefix">perm_identity</i>Username: <%= @user.username %></li>
            <li><i class="fa fa-birthday-cake prefix"></i> Birthdate: <%= @user.birthday %></li>
            <li><i class="fa fa-tasks prefix"></i> Projects: <%= @user.projects.count%></li>
            <li><i class="fa fa-group prefix"></i> Groups: <%= @user.groups.count%></li>
          </ul>
        </div>
      </div>
    </div>
    <h3 class="card-title">Groups</h3>
    <div class="card">
      <div class="card-content">
        <ul class="collection">
          <%= render @user.groups %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col s12 m9">
    <h3 class="card-title">Projects</h3>
    <div class="card-block">
      <div class="card">
        <div class="card-content">
          <div class="card-title">All Projects</div>
          <div class="card-block">
            <ul class="collapsible" id="user-project-list">
              <% @user.projects.each do |p| %>
                  <li id="Post<%= p.id %>">
                    <div class="collapsible-header"><%= link_to p.title, project_path(p) %>
                      <div class="progress">
                        <div class="determinate" style="width: <%= p.progress %>%"></div>
                      </div>
                    </div>
                    <div class="collapsible-body">
                      <ul class="collection">
                        <% p.tasks.each do |t| %>
                            <li class="collection-item">
                              <%= check_box("completed", t.id, {checked: t.completed}) %>
                              <label for="check_box<%= t.id %>"><%= link_to(t.title, tasks_path(t)) %></label>
                            </li>
                        <% end %>
                      </ul>
                    </div>
                  </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>